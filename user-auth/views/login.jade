extends layout

block content
  if (username)
    .alert.alert-success 注册成功！请登录。
  form.form-horizontal(role='form', action='/login', method='POST')
    fieldset
      legend 登录
      .form-group
        label.col-sm-2.control-label(for='username') 用户
        .col-sm-10
          input#username.form-control(type='text', name='username', placeholder='用户名', value=username)
      .form-group
        label.col-sm-2.control-label(for='password') 密码
        .col-sm-10
          input#password.form-control(type='password', name='password', placeholder='密码')
      .form-group
        .col-sm-offset-2.col-sm-10
          button.btn.btn-primary(type='submit') 登录
          a.btn.btn-success(href='/register') 注册
          a.btn.btn-default.pull-right(href='/') 主页
